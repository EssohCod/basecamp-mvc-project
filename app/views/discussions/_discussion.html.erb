<li id="discussion-<%= discussion.id %>" class="list-group-item d-flex justify-content-between align-items-center">
  <div>
    <strong><%= discussion.user.email %>:</strong> <%= discussion.content %>
  </div>
  <div>
    <%= link_to 'Delete', project_discussion_path(discussion.project, discussion), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
  </div>
</li>
